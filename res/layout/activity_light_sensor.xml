<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mflt.icici.LightSensor" >

    <EditText
        android:id="@+id/lednum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:inputType="number" />

    <EditText
        android:id="@+id/leddelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lednum"
        android:hint="Delay"
        android:inputType="number" />

    <Button
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leddelay"
        android:text="@string/transmit_action" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle"
        android:text="Stop" />

    <RelativeLayout
        android:id="@+id/extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/grid"
        android:layout_below="@+id/grid"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/zero"
            
            android:layout_width="135dp"
        android:background="@drawable/keypadsel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:layout_width="135dp"
            
        android:background="@drawable/keypadsel"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zero"
            android:text="Back" />
    </RelativeLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/extra"
        android:layout_alignRight="@+id/extra"
        android:layout_below="@id/extra"
        android:text="Withdraw" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stop"
        android:layout_below="@+id/stop"
        android:columnCount="3"
        android:orientation="horizontal" >

        <Button
            android:background="@drawable/keypadsel"
            android:text="1" />

        <Button
            android:background="@drawable/keypadsel"
            android:text="2" />

        <Button
            android:background="@drawable/keypadsel"
            android:text="3" />

        <Button
            android:background="@drawable/keypadsel"
            android:text="4" />

        <Button
            android:background="@drawable/keypadsel"
            android:text="5" />

        <Button
            android:background="@drawable/keypadsel"
            android:text="6" />

        <Button
            android:background="@drawable/keypadsel"
            android:text="7" />

        <Button
            android:background="@drawable/keypadsel"
            android:text="8" />

        <Button
            android:background="@drawable/keypadsel"
            android:text="9" />
    </GridLayout>

</RelativeLayout>