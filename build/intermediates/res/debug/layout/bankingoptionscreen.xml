<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/mflt6">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdraw cash"
        android:id="@+id/mywithdraw"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:onClick="onWithdraw" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance Enquiry"
        android:id="@+id/mybalance"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onBalanceenquiry" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change PIN"
        android:id="@+id/mychangepin"
        android:nestedScrollingEnabled="false"
        android:onClick="onChangepin"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enables you to withdraw cash from the ATM. maximum allowed is Rs.10,000"
        android:id="@+id/textView5"
        android:layout_below="@+id/mywithdraw"
        android:layout_centerHorizontal="true"
        android:textColor="#ff00ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enables you to check the balance"
        android:id="@+id/textView6"
        android:layout_below="@+id/mybalance"
        android:layout_centerHorizontal="true"
        android:textColor="#ff00ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enables you to replace the existing PIN with the PIN of your choice"
        android:id="@+id/textView7"
        android:layout_below="@+id/mychangepin"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textColor="#ff00ff" />
</RelativeLayout><!-- From: file:/C:/Users/gv/AndroidStudioProjects/bhavesh_goyal-icici-mflt-365a58f1034e/res/layout/bankingoptionscreen.xml -->